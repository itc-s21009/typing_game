doctype html
html(lang='ja')
  head
    meta(charset='UTF-8')
    title タイピングゲーム
    <!-- CSS only -->
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
    block header
  body.container
    .mt-3.container.row
      .col-sm
        h1.text-nowrap
          a(href='/').text-decoration-none.text-primary タイピングゲーム
      .col-sm-6.col-lg-4.col-4.text-end
        .container
          if user
            h6.text-nowrap #{user.username} としてログイン中
            .row
              .col-sm
                h6.text-nowrap.me-2
                  a(href='/admin/settings').btn.btn-outline-primary 設定
              .col-sm
                h6.text-nowrap
                  a(href='/logout').btn.btn-outline-primary ログアウト
          else
            h6.text-nowrap
              a(href='/login').text-decoration-none.text-primary ログイン
    hr
    block content