doctype html
html(lang='ja')
  head
    meta(charset='UTF-8')
    title タイピングゲーム
    <!-- CSS only -->
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
    block header
  body.container
    .d-flex.justify-content-between.mt-3
      div
        h1
          a(href='/').text-decoration-none.text-primary タイピングゲーム
      .text-end.d-flex.align-items-end
        if user
          .container
            h6 #{user} としてログイン中
            .d-flex.justify-content-end
              h6.me-2
                a(href='/admin/settings').btn.btn-outline-primary 設定
              h6
                a(href='/logout').btn.btn-outline-primary ログアウト
        else
          .container
            h6
              a(href='/login').text-decoration-none.text-primary ログイン
    hr
    block content