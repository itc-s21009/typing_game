doctype html
html(lang='ja')
  head
    meta(charset='UTF-8')
    title タイピングゲーム
    <!-- CSS only -->
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
    link(href="/css/style.css" rel="stylesheet")
    link(href="https://fonts.googleapis.com/css?family=Corben:700" rel="stylesheet")
    block header
  body
    .header
      .row
        .col-sm
          h1
            a(href='/' style='font-family: Corben').title HIMAWARI Typing
        .col-sm-4
          .topmenu
            if user
              .user-area #{user.username} <br>としてログイン中
              .buttons
                a(href='/admin/settings') 設定
                a(href='/logout') ログアウト
            else
              .buttons
                a(href='/login') ログイン
    .container
      block content